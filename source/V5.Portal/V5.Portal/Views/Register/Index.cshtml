@Scripts.Render("~/Scripts/jquery-1.6.7.min.js")
<script type="text/javascript">
    $(function () {
        var fvalue = $("#uname").val() || "";
        if (fvalue == "") {
            $("#info").show();
        } else {
            $("#info").hide();
        }

        $(".txt").each(function () {
            $(this).focus(function () {
                $(this).addClass("cur");

                var label = $(this).attr("label") || "";
                if (label == "") return;

                var info = $("#" + label).attr("info") || "";
                if (info == "") return;

                $("#" + label).text(info).css("display", "inline-block");
            }).blur(function () {
                $(this).removeClass("cur");

                var label = $(this).attr("label") || "";
                if (label == "") return;

                $("#" + label).hide();
            });

            if ($(this).attr("id") == "uname") {
                $(this).focus(function () {
                    $("#info").hide();
                }).blur(function () {
                    var fvalue = $("#uname").val() || "";
                    if (fvalue == "") {
                        $("#info").show();
                    }
                });
            }
        });
    });
</script>
