@using V5.Portal.Common
@model V5.Portal.Models.OrderDetailModel
@{
    ViewBag.Title = "订单详情 - 购酒网";
}
<link href="../../Content/Order/cloud_002.css" rel="stylesheet" type="text/css">
<link href="../../Content/Order/cloud_003.css" rel="stylesheet" type="text/css">
<link href="../../Content/Order/cloud.css" rel="stylesheet" type="text/css">
<link href="../../Content/Order/user.css" rel="stylesheet" type="text/css">
<link href="../../Content/Order/v4_cart.css" rel="stylesheet" />
<script async="" src="../../Scripts/Order/rt.js" type="text/javascript"></script>
<script src="" src="../../Scripts/head.js" type="text/javascript"></script>
<script src="../../Scripts/global.js" type="text/javascript"></script>
 <script type="text/javascript">
     var SiteUrl = "http://v4.gjw.com";
     $(".cateMenu").hide();
     $(".navCon_on").hover(function () {
         $(".cateMenu").show();
         $(".navCon-cate-title").addClass("hover");
     },
	function () {
	    $(".cateMenu").hide();
	    $(".navCon-cate-title").removeClass("hover");
	});
</script>
<style type="text/css">
    .content{width:1200px;}
    .conCrumb{line-height:32px;}
    
    .conRight {
        float: left !important;
        width: 960px;
    }
    .con_hd{background-color:#FFF; margin:1px 1px 0px 15px;border-left: 4px solid #cf0404;}
    .con_hd h3{background:url(../images/bg_index.png) no-repeat; text-indent:-1000px; overflow:hidden;}
</style>
<div class="content fix">
    	<!--内容导航 begin-->
        <div class="conCrumb">
            <div>
                您当前的位置：
                <a href="http://v4.gjw.com">首页</a>
                &nbsp;&gt;&nbsp;
                <a href="http://v4.gjw.com/user/">用户中心</a>
                &nbsp;&gt;&nbsp;
                <span class="c01">订单详情</span>
            </div>
        </div>
        <!--内容导航 end-->
        
<!--左侧 begin-->
        <div class="conLeft">
        	<div class="userCenter">
            	<h2><a class="user_center_title" href="http://v4.gjw.com/user/">用户中心</a></h2>
            </div>
        	<!--侧边菜单 begin-->
            <ul class="side-nav">
            	<li>
            		<h3>交易管理</h3>
            	</li>
                <li>
                	<a href="/Order/MyOrder">我的订单</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyFav.htm">我的收藏</a>
                </li>
                <li>
            		<h3>服务与评价</h3>
            	</li>
               <li>
                	<a href="http://v4.gjw.com/user/MyAsk.htm">我的咨询</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyComment.htm">我的评价</a>
                </li>
                
                <li>
                	<h3>帐户管理</h3>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyAddress.htm">收货地址</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyVoucher.htm">我的电子券</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyAccount.htm">账户余额</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyInfo.htm">个人资料</a>
                </li>
                <li>
                	<a href="http://v4.gjw.com/user/MyPsaaword.htm">密码管理</a>
                </li>
            </ul>
            <!--侧边菜单 end-->
        </div>
        <!--左侧 end-->

    <!--右侧 begin-->
        <div class="conRight">
            <!--我的订单 begin-->
            <div class="con_orderDetail con_bg">
            	<div class="con_hd">
                	<h3>猜你喜欢</h3>
                </div>
                <div class="con_bd">
                    <div class="userTbList">
                        <dl class="order_box">
                            <dt><strong>订单编号</strong></dt>
                            @{
                                if (Model != null && Model.OrderInfo != null)
                                {
                                    <dd>
                                        <table class="orderinfo_tab">
                                            <tbody>
                                                <tr>
                                                    <td align="left" valign="top" width="78">@Model.OrderInfo.OrderCode</td>
                                                    <td align="left" valign="top"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </dd>
                                }
                                else
                                {
                                    <dd>
                                        <table class="orderinfo_tab">
                                            <tbody>
                                                <tr>
                                                    <td align="left" valign="top" width="90%">对不起，我们没有找到您的订单~~，请与客服联系！</td>
                                                    <td align="left" valign="top"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </dd>
                                }
                            }

                            <dt><strong>订单跟踪</strong></dt>
                            
                                    <dd>
                                        <table class="ordergo_tab">
                                            <tbody>
                                                <tr>
                                                    <th width="156">操作时间</th>
                                                    <th width="500">操作信息</th>
                                                    <th>操作人</th>
                                                </tr>
                                                @{
                                                    if (Model != null && Model.OrderDeliveryTrackDetails != null)
                                                    {
                                                        foreach (var tracking in Model.OrderDeliveryTrackDetails)
                                                        {
                                                            <tr>
                                                                <td valign="bottom">@tracking.OperateTime.ToLocalTime()</td>
                                                                <td valign="bottom">@tracking.OperateSummary</td>
                                                                <td valign="bottom">@tracking.Operator</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                                <td valign="bottom" colspan="3">对不起，系统目前没有您的订单相关跟踪信息。</td>
                                                        </tr>
                                                    }
                                                }
                                        
                                            </tbody>
                                        </table>
                                    </dd>

                                
                        </dl>
                        <dl class="order_box">
                            <dt><strong>收货人信息</strong></dt>
                            <dd>
                                 @{
                                     if (Model != null && Model.ReceiverInfo != null)
                                     {
                                         <table class="orderinfo_tab">
                                             <tbody>
                                                <tr>
                                                    <td align="right" valign="top" width="78">收货人姓名：</td>
                                                    <td align="left" valign="top">@Model.ReceiverInfo.Consignee</td>
                                                </tr>
                                                <tr>
                                                    <td align="right" valign="top">所在城市：</td>
                                                    <td align="left" valign="top">@Model.ReceiverInfo.CountyName("-")</td>
                                                </tr>
                                                <tr>
                                                    <td align="right" valign="top">详细地址：</td>
                                                    <td align="left" valign="top">@Model.ReceiverInfo.Address</td>
                                                </tr>
                                                <tr>
                                                    <td align="right" valign="top">手机号码：</td>
                                                    <td align="left" valign="top">@Model.ReceiverInfo.Mobile</td>
                                                </tr>   
                                                <tr>
                                                    <td align="right" valign="top">电话号码：</td>
                                                    <td align="left" valign="top">@Model.ReceiverInfo.Tel</td>
                                                </tr>
                                            </tbody>
                                        </table>                                                                       
                                     }
                                 }
                                     
                            </dd>
                            <dt><strong>配送与付款方式</strong></dt>
                            <dd>
                                @{
                                    if (Model != null && Model.OrderInfo != null)
                                    {
                                         <table class="orderinfo_tab">
                                            <tbody>
                                    
                                                <tr>
                                                    <td align="right" valign="top" width="78">付款方式：</td>
                                                    <td align="left" valign="top">@Model.OrderInfo.PaymentMethodName</td>
                                                </tr>
                                        
                                    
                                            </tbody>
                                        </table>
                                    }
                                }
                                   
                            </dd>


                            <dt><strong>留言信息 发票信息</strong></dt>
                            <dd>
                                
                                <table class="orderinfo_tab">
                                    <tbody>
                                        @{
                                            if (Model != null && Model.OrderInfo != null)
                                            {
                                                <tr>
                                                    <td align="right" valign="top" width="78">留言信息：</td>
                                                    <td align="left" valign="top">@Model.OrderInfo.Remark</td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td align="right" valign="top" width="78">留言信息：</td>
                                                    <td align="left" valign="top"></td>
                                                </tr>
                                            }
                                        }
                                        @{
                                            if (Model != null && Model.InvoiceInfo != null)
                                            {
                                            <tr>
                                                <td align="right" valign="top">发票信息：</td>
                                                <td align="left" valign="top">抬头：@Model.InvoiceInfo.InvoiceTitle；</td>
                                            </tr>
                                            }
                                            else
                                            {
                                            <tr>
                                                <td align="right" valign="top">发票信息：</td>
                                                <td align="left" valign="top">不开发票</td>
                                            </tr>
                                        }
                                    }
                                            
                                    </tbody>
                                </table>
                                
                            </dd>


                            <dt><strong>商品清单</strong></dt>
                            <dd>
                                @{
                                    if (Model != null && Model.OrderProducts != null)
                                    {
                                        var total = 0.0;
                                        <table class="inventory">
                                            <tbody>
                                                <tr class="bgf2">
                                                    <th width="10%">&nbsp;</th>
                                                    <th width="45%">商品</th>
                                                    <th align="center" width="15%">单价</th>
                                                    <th align="center" width="10%">数量</th>
                                                    <th align="center" width="20%">小计</th>
                                                </tr>
                                                
                                                @{
                                                    foreach(var product in Model.OrderProducts)
                                                    {
                                                        <tr>
                                                            <td align="center"><a href="@Html.Raw(ConstantParams.ProductUrl+"?ID="+product.ProductID)" target="_blank">
                                                                                   <img class="productImg" src="@Html.Raw(product.Path)">
                                                                               </a></td>
                                                            <td>
                                                                <a class="blue" href="@Html.Raw(ConstantParams.ProductUrl+"?ID="+product.ProductID)" target="_blank">@product.ProductName</a><br>
                                                        
                                                            </td>
                                                            <td align="center">¥@product.TransactPrice</td>
                                                            <td align="center">@product.Quantity</td>
                                                            <td align="center">¥<em>@product.TotalPrice</em></td>
                                                        </tr>
                                                    
                                                        total += @product.TotalPrice;
                                                    }
                                                }
                                                
                                                
                                                <tr class="vanish">
                                                    <td>&nbsp;</td>
                                                    @{
                                                        if (Model != null && Model.OrderInfo != null)
                                                        {
                                                            <td colspan="4" align="right" valign="middle"> 商品总金额：¥@Model.OrderInfo.TotalMoney  + 运费：¥0 - 满额立减：¥0 - 积分抵扣：¥0  - 电子券抵扣：¥0  - 账户余额抵扣：¥0</td>
                                                        }
                                                        else
                                                        {
                                                            <td colspan="4" align="right" valign="middle"> 商品总金额：¥0  + 运费：¥0 - 满额立减：¥0 - 积分抵扣：¥0  - 电子券抵扣：¥0  - 账户余额抵扣：¥0</td>
                                                        }
                                                     }
                                                </tr>
                                                <tr class="lineHeight40">
                                                    <td>&nbsp;</td>
                                                    <td>&nbsp;</td>                                                    
                                                    
                                                    <td class="sum" colspan="3" align="right">
                                                        <table border="0" cellpadding="0" cellspacing="0" width="0">
                                                            <tbody><tr>
                                                                       <td class="sum_title">&nbsp;</td>
                                                                       <td>¥@total</td>
                                                                   </tr>
                                                            </tbody></table>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    }
                                }
                                    </
                                    dd>
                        </dl>
                    </div>
                </div>
            </div>
            <!--我的订单 end-->            
        </div>
        <!--右侧 end-->
    </div>