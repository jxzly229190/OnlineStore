<form id="cartForm" action="~/Order/OrderInfo">            
    <dl class="cart_box">
        <dt>
            <span class="cb_r0" style="text-align: center;">全选</span>
            <span class="cb_r1" style="text-align: center;">商品</span>
            <span class="cb_r2">单价</span>
            <span class="cb_r3">优惠</span>
            <span class="cb_r4">数量</span>
            <span class="cb_r5">小计</span>
            <span class="cb_r6">操作</span>
            <div class="clear"></div>
        </dt>
        <dd id="cart_goods">
            <div id="cart_goods_area">
                @{
                    var url = "/Home/Item?ID=";
                    if (Model != null && Model.ProductItems != null)
                    {
                        foreach (var item in Model.ProductItems)
                        {
                            <table class="cart_goods_area" id="@Html.Raw("product_"+item.ProductID)">
                                <tbody>
                                    <tr>
                                        <td class="zp_td">
                                            <input type="checkbox" name="proIds" value="@Html.Raw(item.ProductID)" />
                                        </td> 
                                        <td class="cb_r11 zp_td">
                                            <a href="@Html.Raw(url+item.ProductID.ToString())" target="_blank">
                                                <img src="@Html.Raw(item.ProductPic)" title="@Html.Raw(item.ProductName)" height="50" width="50"></a>
                                        </td>
                                        <td class="cb_r12 zp_td">
                                            <a class="c12" href="@Html.Raw(url+item.ProductID.ToString())" target="_blank">@item.ProductName</a><br>
                                    
                                        </td>
                                        <td class="cb_r2 zp_td" align="center" >
                                            ¥ <span id="@Html.Raw("price_" + item.ProductID)" name="price">@item.GoujiuPrice</span>
                                        </td>
                                        <td class="cb_r3 zp_td cf04" align="center">
                                            <span name="discount">-</span>
                                        </td>
                                        <td class="cb_r4 zp_td" align="center">
                                            <p class="num_line">
                                                <span class="fl num_down" index="@Html.Raw(item.ProductID)">&nbsp;</span>
                                                <input value="@Html.Raw(item.Quantity)" maxlength="4" class="fl num_input Quantity" name="quantity" id="@Html.Raw("quantity_" + item.ProductID)" index="@Html.Raw(item.ProductID)" type="text">
                                                <span class="fl num_up" index="@Html.Raw(item.ProductID)">&nbsp;</span> <span style="display: none;" class="num_tip">
                                                                                                                        </span>
                                            </p>
                                        </td>
                                        <td class="cb_r5 zp_td" align="center">
                                            <span>¥<b name="money" id="@Html.Raw("money_" + item.ProductID)">@(item.Quantity*item.GoujiuPrice)</b></span>
                                        </td>
                                        <td class="cb_r6 zp_td" align="center">
                                            <span class="coll_opt"><a href="javascript:Collect(@Html.Raw(item.ProductID))">收藏</a></span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="del_opt"><a href="javascript:Del(@Html.Raw(item.ProductID))">删除</a></span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            total += (item.Quantity * item.GoujiuPrice - item.Discount);
                        }
                    }
                    else
                    {
                        <span>您购物车里什么也没有%>_<%，快去挑几件吧。</span>
                    }
                }
                
            </div>
            <div id="cart_favor_area">
            </div>
        </dd>
    </dl>
    <dl id="cart_info" class="cart_info">
        <!--new-->
        <div id="bonus_list_area">
            <dt id="yhq_2">
                <ul class="yhq_line">
                    <li><span class="yhq_lab">输入优惠代码</span></li>
                    <li style="width: 110px;" class="yhq_select yhq_inputbox">
                        <input name="txtCode" id="txtCode" maxlength="9" class="yhq_input" type="text">
                    </li>
                    <li style="display: none;" class="yhqyzm_box"><span class="fl yzm_lab">验证码:</span><img style="cursor: pointer;" id="captcha1">
                        <input maxlength="6" id="bonus_captcha" class="fl yhq_yzm" type="text">
                        <span class="fl yzm_lab">看不清？<a class="blue" style="cursor: pointer;">换一张</a></span></li>
                    <li id="use_quan" class="yhq_select"><a id="AOk" class="cbtnIndent use_btn">使用</a><a id="ANo" class="cbtnIndent use_btn" style="display:none;">取消</a></li>
                    <li><span class="yhq_lab"><a style="padding-left: 10px;" class="blue yhq_js_change" href="http://v4.gjw.com/help/show-id-57.htm" target="_blank">
                                                    怎样得到优惠代码？</a></span></li>
                    <li id="yhq_tip_2"></li>
                </ul>
                <div class="clear">
                </div>
            </dt>
        </div>
        <!--new-->
        <dd>
            <ul id="total_area" class="cart_sum">
                <li id="total_price"><span class="fl tip">商品价格和库存请以订单提交时为准</span>应付商品金额：<font>¥</font> <font id="totalMoney">@total.ToString()</font></li>
                <li style="display: none;" id="total_discount">兑换券折扣：<b>-¥0.00</b></li>
                <li style="display: none;" id="total_bonus">优惠券折扣：<b>-¥0.00</b></li>
                <li style="display: none;" id="total_discount">折扣：<b>-¥0.00</b></li>
                <li style="padding-top: 10px; border-top: 1px solid rgb(234, 234, 234); margin-top: 6px;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                display: none;" id="total_amount">应付商品金额：<font>¥137.00</font></li>
            </ul>
            <div class="clear">
            </div>
        </dd>
    </dl>
    <div class="cart_btn">
        <a href="javascript:Back();" id="ABack" class="fl cbtn gono_btn">继续购物</a>
