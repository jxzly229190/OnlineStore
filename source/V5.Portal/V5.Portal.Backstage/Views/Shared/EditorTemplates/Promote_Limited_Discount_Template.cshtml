<div class="editor-label">
    能否使用优惠券：
</div>
<div class="editor-field">
    @Html.CheckBoxFor(model => model.IsUseCoupon)
</div>
<div class="editor-label">
    活动开始时间：
</div>
<div class="editor-field">
    @Html.Kendo().DateTimePickerFor(model=>model.StartTime)
</div>

<div class="editor-label">
    活动结束时间：
</div>
<div class="editor-field">
    @Html.Kendo().DateTimePickerFor(model=>model.EndTime)
