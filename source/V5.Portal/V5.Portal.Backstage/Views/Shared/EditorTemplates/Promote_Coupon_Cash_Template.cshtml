@model V5.Portal.Backstage.Models.Promote.CouponCashModel
@Html.ValidationSummary(true)

@Html.HiddenFor(model => model.ID)

<div class="editor-label">
    优惠券名称：
</div>
<div class="editor-field">
     @Html.EditorFor(model=>model.Name)
     @Html.ValidationMessageFor(model=>model.Name)
</div>

<div class="editor-label">
    初始数量：
</div>
<div class="editor-field">
    @Html.Kendo().IntegerTextBoxFor(model => model.InitialNumber).Min(0)
    @Html.ValidationMessageFor(model => model.InitialNumber)
</div>

<div class="editor-label">
    优惠券面额：
</div>
<div class="editor-field">
     @Html.Kendo().NumericTextBoxFor(model=>model.FaceValue).Min(0)
     @Html.ValidationMessageFor(model => model.FaceValue)
</div>

<div class="editor-label">
    生效日期：
</div>
<div class="editor-field">
    @Html.Kendo().DatePickerFor(model=>model.StartTime)
    @Html.ValidationMessageFor(model => model.StartTime)
</div>

<div class="editor-label">
    作废日期：
</div>
<div class="editor-field">
    @Html.Kendo().DatePickerFor(model=>model.EndTime)
    @Html.ValidationMessageFor(model => model.EndTime)
</div>

<div class="editor-label">
    活动备注：
</div>
<div class="editor-field">
     @Html.EditorFor(model=>model.Description)
     @Html.ValidationMessageFor(model => model.Description)
</div>