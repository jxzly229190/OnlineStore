@model V5.Portal.Backstage.Models.Transact.CpsCommissionRatioModel
@Html.ValidationSummary(true)

@Html.HiddenFor(model => model.ID)

<div class="editor-label">
    商品类别：
</div>
<div class="editor-field">
     @(Html.Kendo().DropDownListFor(model =>model.ProductCategoryID).DataSource(ds => ds.Read("QuerySelectListItems", "Transact")).DataTextField("Text").DataValueField("Value").Value("3"))
</div>

<div class="editor-label">
    佣金比例：
</div>
<div class="editor-field">
    @Html.Kendo().NumericTextBoxFor(model => model.CommissionRatio).Min(0).Max(1).Format("p0")
    @Html.ValidationMessageFor(model => model.CommissionRatio)
</div>


